package(default_visibility = ["//visibility:public"])

load("@//tools/build:java.bzl", "junit5_tests")
{%- if module.buildAsScala() %}
load("@io_bazel_rules_scala//scala:scala.bzl", "scala_library", "scala_binary", "scala_test")
{%- endif %}

{%- if module.buildAsJava() %}
java_library(
    name = "jar",
    srcs = glob(["src/main/java/**/*.java"]),
    deps = [
    {%- for dep in compile %}
        "{{dep}}",
    {%- endfor %}
    ],
    javacopts = [
    {%- for arg in javacopts %}
        "{{arg}}",
    {%- endfor %}
    ],
)
{%- endif %}


{%- if module.buildAsScala() %}
scala_library(
    name = "jar",
    srcs = glob(["src/main/scala/**/*.scala", "src/main/java/**/*.java"]),
    deps = [
    {%- for dep in compile %}
        "{{dep}}",
    {%- endfor %}
    ],
    scalacopts = [
    {%- for arg in scalacopts %}
        "{{arg}}",
    {%- endfor %}
    ],
    scalac_jvm_flags = [
    {%- for arg in scalac_jvm_flags %}
        "{{arg}}",
    {%- endfor %}
    ],
)
{%- endif %}

{%- if module.testAsJava() %}
java_library(
    name = "test-jar",
    srcs = glob(["src/test/java/**/*.java"]),
    resources = glob(["src/test/resources/**"]),
    deps = [
        ":jar",
    {%- for dep in test %}
        "{{dep}}",
    {%- endfor %}
    ],
)

junit5_tests(
    name = "tests",
    select_package = [
        "org.neo4j",
        "com.neo4j",
    ],
    runtime_deps = [
        ":test-jar",
    ],
)
{%- endif %}

{%- if module.testAsScala() %}
scala_library(
    name = "test-jar",
    srcs = glob(["src/test/scala/**/*.scala", "src/test/java/**/*.java"]),
    deps = [
    {%- for dep in test %}
        "{{dep}}",
    {%- endfor %}
    ],
    scalacopts = [
    {%- for arg in scalacopts %}
        "{{arg}}",
    {%- endfor %}
    ],
    scalac_jvm_flags = [
    {%- for arg in scalac_jvm_flags %}
        "{{arg}}",
    {%- endfor %}
    ],
)
{%- endif %}
